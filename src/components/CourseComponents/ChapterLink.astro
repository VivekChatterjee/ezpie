---
const { link, title, description } = Astro.props;
---

<a href={link}>
    <div class="max-w-sm bg-gray-600 p-6 rounded-xl hover:scale-105 duration-500">
        <h3 class="text-white text-xl">
            {title}
        </h3>
        <p class="text-gray-300">
            {description}
        </p>
    </div>
</a>
